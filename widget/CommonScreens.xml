<?xml version="1.0" encoding="UTF-8"?>
<screens xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://ofbiz.apache.org/dtds/widget-screen.xsd">

    <screen name="main-decorator">
        <section>
            <actions>
                <property-map resource="cmcrmUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="CommonUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="HumanResUiLabels" map-name="uiLabelMap" global="true"/>
                <property-map resource="cmcrmToolsUiLabels" map-name="uiTools" global="true"/>

                <set field="layoutSettings.companyName" from-field="uiLabelMap.cmcrmCompanyName" global="true"/>
                <set field="layoutSettings.companySubtitle" from-field="uiLabelMap.cmcrmCompanySubtitle" global="true"/>

                <set field="activeApp" value="cmcrm" global="true"/>
                <set field="applicationMenuName" value="MainAppBar" global="true"/>
                <set field="applicationMenuLocation" value="component://cmcrm/widget/cmcrmMenus.xml" global="true"/>
                <set field="applicationTitle" value="${uiLabelMap.cmcrmApplication}" global="true"/>
            </actions>
            <widgets>
                <include-screen name="GlobalDecorator" location="component://common/widget/CommonScreens.xml"/>
            </widgets>
        </section>
    </screen>

    <screen name="cmcrmCommonDecorator">
        <section>
            <actions>
                <set field="headerItem" value="main"/>
            </actions>
            <widgets>
                <decorator-screen name="main-decorator" location="${parameters.mainDecoratorLocation}">
                    <decorator-section name="body">
                        <section>
                            <condition>
                                <if-has-permission permission="CMCRM" action="_VIEW"/>
                            </condition>
                            <widgets>
                                <decorator-section-include name="body"/>
                            </widgets>
                            <fail-widgets>
                                <label style="h3">${uiLabelMap.cmcrmViewPermissionError}</label>
                            </fail-widgets>
                        </section>
                    </decorator-section>
                </decorator-screen>
            </widgets>
        </section>
    </screen>

    <screen name="PartyGroupTreeLine">
        <section>
            <widgets>
                <link target="org" text="${partyAndGroup.groupName}">
                    <parameter param-name="view" value="userlists"/>
                    <parameter param-name="partyId" value="${partyAndGroup.partyId}"/>
                </link>
            </widgets>
        </section>
    </screen>
    
    <screen name="PartyPersonTreeLine">
        <section>
            <widgets>
                <label text="${partyAndPerson.firstName} ${partyAndPerson.lastName}" style="tabletext"/>
            </widgets>
        </section>
    </screen>

</screens>
